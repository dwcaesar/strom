<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.wohlers.strom.Views.EditMemberDialog">
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="TOP_RIGHT" spacing="5.0">
            <Button fx:id="deleteButton" onAction="#onDelete" text="%Generic.Button.Delete">
            <graphic>
               <FontAwesomeIconView glyphName="TRASH" />
            </graphic></Button>
            <Separator orientation="VERTICAL">
                <HBox.margin>
                    <Insets left="4.0" />
                </HBox.margin>
            </Separator>
            <Button cancelButton="true" layoutX="125.0" layoutY="10.0" onAction="#onCancel" text="%Generic.Button.Cancel">
            <graphic>
               <FontAwesomeIconView glyphName="CLOSE" />
            </graphic></Button>
            <Button fx:id="saveButton" defaultButton="true" layoutX="30.0" layoutY="10.0" onAction="#onSave" text="%Generic.Button.Save">
            <graphic>
               <FontAwesomeIconView glyphName="SAVE" />
            </graphic></Button>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
