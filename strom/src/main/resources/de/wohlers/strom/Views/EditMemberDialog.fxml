<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<Stage xmlns:fx="http://javafx.com/fxml/1" fx:id="stage" onShown="#focusSave" title="%Dialog.Title.Edit" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="de.wohlers.strom.Views.EditMemberDialog">
    <scene>
        <Scene>
            <BorderPane>
                <center>
                    <GridPane BorderPane.alignment="CENTER">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="%Member.Name"/>
                        <TextField fx:id="nameField" GridPane.columnIndex="1"/>
                    </GridPane>
                </center>
                <bottom>
                    <HBox alignment="TOP_RIGHT" spacing="5.0">
                        <Button fx:id="deleteButton" disable="true" layoutX="10.0" layoutY="40.0" mnemonicParsing="false" onAction="#onDelete" text="%Generic.Button.Delete">
                            <graphic>
                                <FontAwesomeIconView glyphName="TRASH"/>
                            </graphic>
                        </Button>
                        <Separator orientation="VERTICAL">
                            <HBox.margin>
                                <Insets left="4.0"/>
                            </HBox.margin>
                        </Separator>
                        <Button cancelButton="true" layoutX="125.0" layoutY="10.0" onAction="#onCancel" text="%Generic.Button.Cancel">
                            <graphic>
                                <FontAwesomeIconView glyphName="CLOSE"/>
                            </graphic>
                        </Button>
                        <Button fx:id="saveButton" defaultButton="true" layoutX="30.0" layoutY="10.0" onAction="#onSave" text="%Generic.Button.Save">
                            <graphic>
                                <FontAwesomeIconView glyphName="SAVE"/>
                            </graphic>
                        </Button>
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                    </HBox>
                </bottom>
            </BorderPane>
        </Scene>
    </scene>
</Stage>
